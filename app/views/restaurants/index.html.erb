<p id="notice"><%= notice %></p>

<h1>JOJOJOJO SHOP</h1>

<table class = "table">
  <thead class="thead-red">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.website %></td>
        <td><button type="button" class="btn btn-outline-primary"><%= link_to 'Show', restaurant %></td></button>
        <td><button type="button" class="btn btn-outline-warning"><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td><button>
        <td><button type="button" class="btn btn-outline-danger"><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td><button>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-outline-dark"><%= link_to 'New Restaurant', new_restaurant_path %></button>
